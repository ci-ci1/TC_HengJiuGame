
@{
    ViewBag.Title = "Add";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Demo</title>

    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <style>

        body {
            display: flex;
            justify-content: center; /* 水平居中 */
            align-items: center; /* 垂直居中 */
            min-height: 100vh; /* 页面高度占满窗口 */
            margin: 0;
            /* 渐变背景 */
            background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
        }

        /* 让表单更突出 */
        .layui-form {
            background: rgba(255, 255, 255, 0.9); /* 半透明白色背景 */
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }
    </style>
</head>
<body>
    <form class="layui-form" action="" >
        <div class="layui-form-item">
            <div class="layui-input-group">
                <label class="layui-form-label">昵称</label>
                <div class="layui-input-inline layui-input-wrap">
                    <input type="text" name="UserCode" placeholder="请输入姓名" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-group">
                <label class="layui-form-label">用户名</label>
                <div class="layui-input-inline layui-input-wrap">
                    <input type="text" name="UserName" placeholder="请填写用户名" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">密码</label>
            <div class="layui-input-inline layui-input-wrap">
                <input type="password" name="Password" lay-verify="required|pass" placeholder="请输入密码" autocomplete="off" lay-affix="eye" class="layui-input">
            </div>
        </div>


        <div class="layui-form-item">
            <label class="layui-form-label">性别</label>
            <div class="layui-input-block">
                <input type="radio" name="Sex" value="fales" title="男" checked>
                <input type="radio" name="Sex" value="true" title="女">
            </div>
        </div>




        <div class="layui-inline">
            <label class="layui-form-label">出生日期</label>
            <div class="layui-input-inline layui-input-wrap">
                <div class="layui-input-inline layui-input-wrap">
                    <input type="text" name="BirthDay" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div><br /><br />
        <div class="layui-form-item">
            <label class="layui-form-label">住址</label>
            <div class="layui-input-inline layui-input-wrap">
                <input type="text" name="Address" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">邮箱</label>
                <div class="layui-input-inline">
                    <input type="text" name="Email" lay-verify="email" placeholder="请输入邮箱" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">手机号</label>
                <div class="layui-input-inline layui-input-wrap">
                    <input type="tel" name="Tel" lay-verify="required|phone" autocomplete="off" lay-reqtext="请填写手机号" lay-affix="clear" class="layui-input demo-phone">
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <button type="submit" class="layui-btn" lay-submit lay-filter="demo1">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script>
        layui.use(['form', 'laydate', 'util'], function () {
            var form = layui.form;
            var layer = layui.layer;
            var laydate = layui.laydate;
            var util = layui.util;

            // 自定义验证规则
            form.verify({
                pass: function (value) {
                    if (!/(.+){6,12}$/.test(value)) {
                        return '密码必须 6 到 12 位';
                    }
                }
            });

            // 指定开关事件
            form.on('switch(switchTest)', function (data) {
                layer.msg('开关 checked：' + (this.checked ? 'true' : 'false'), {
                    offset: '6px'
                });
                layer.tips('温馨提示：请注意开关状态的文字可以随意定义，而不仅仅是 ON|OFF', data.othis)
            });

            // 提交事件
            form.on('submit(demo1)', function (data) {
                var field = data.field; // 获取表单字段值
                // 显示填写结果，仅作演示用
               
                // 此处可执行 Ajax 等操作

                $.ajax({
                    url: "/Login/VeryifyAdd",
                    type: "post",
                    data: field,
                    success: function (res) {
                        if (res == "ok") {
                            alert("注册成功！")
                        } else {
                            alert("注册失败！")
                        }
                    }
                })

                // …
                return false; // 阻止默认 form 跳转
            });

            

            
        });
    </script>

</body>
</html>


