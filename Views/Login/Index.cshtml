
@{
    ViewBag.Title = "Index";
}



<style>
        body {
            margin: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            /* 背景渐变 */
            background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);

        }
        /* 2. 登录表单容器样式 */
    .demo-login-container {
        width: 320px;
        margin: 0;
        padding: 28px 32px;
        background-color: rgba(255, 255, 255, 0.92); /* 半透明白色，和背景融合 */
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15); /* 阴影增强层次感 */
        backdrop-filter: blur(6px); /* 毛玻璃效果，让背景更柔和 */
        //transition: all 0.3s ease;/*增加过渡效果，让响应式切换更平滑 */
    }
    
        
        @*@@media (max-width: 768px) {
        .demo-login-container {
            width: 90%;
            padding: 20px;
            transition: all 0.3s ease; /* 可留可去 */
        }

        .layui-btn {
            font-size: 16px;
            padding: 12px 0;
        }

        input.layui-input {
            font-size: 16px;
            padding: 12px;
        }
    }

    /* 手机端 */
    @@media (max-width: 480px) {
        .demo-login-container {
            width: 100%;
            border-radius: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .demo-login-other {
            text-align: center;
            font-size: 14px;
        }
    }*@
       


        .demo-login-other .layui-icon {
            position: relative;
            display: inline-block;
            margin: 0 2px;
            top: 2px;
            font-size: 26px;
        }
</style>
    <form class="layui-form" >
        <div class="demo-login-container">
            <div class="layui-form-item">
                <div class="layui-input-wrap">
                    <div class="layui-input-prefix">
                        <i class="layui-icon layui-icon-username"></i>
                    </div>
                    <input type="text" name="UserCode" value="" lay-verify="required" placeholder="用户名" lay-reqtext="请填写用户名" autocomplete="off" class="layui-input" lay-affix="clear">
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-wrap">
                    <div class="layui-input-prefix">
                        <i class="layui-icon layui-icon-password"></i>
                    </div>
                    <input type="password" name="password" value="" lay-verify="required" placeholder="密   码" lay-reqtext="请填写密码" autocomplete="off" class="layui-input" lay-affix="eye">
                </div>
            </div>
            
            <div class="layui-form-item">
                <input type="checkbox" name="remember" lay-skin="primary" title="记住密码">
                <a href="#forget" style="float: right; margin-top: 7px;">忘记密码？</a>
            </div>
            <div class="layui-form-item">
                <button class="layui-btn layui-btn-fluid" lay-submit lay-filter="demo-login">登录</button>
            </div>
            <div class="layui-form-item demo-login-other">
                <label>社交账号登录</label>
                <span style="padding: 0 21px 0 6px;">
                    <a href="javascript:;"><i class="layui-icon layui-icon-login-qq" style="color: #3492ed;"></i></a>
                    <a href="javascript:;"><i class="layui-icon layui-icon-login-wechat" style="color: #4daf29;"></i></a>
                    <a href="javascript:;"><i class="layui-icon layui-icon-login-weibo" style="color: #cf1900;"></i></a>
                </span>
                或 <a href="/Login/Registered">注册帐号</a>
            </div>
        </div>
    </form>


    <script>
        layui.use(function () {
            var form = layui.form;
            var layer = layui.layer;
            // 提交事件
            form.on('submit(demo-login)', function (data) {
                var field = data.field; // 获取表单字段值
                
                // 此处可执行 Ajax 等操作

                $.ajax({
                    url: "/Login/VeryifyLogin",
                    type: "post",
                    data: field,
                    success: function (res) {
                        if (res.code == 0) {
                            layer.msg(res.msg, { icon: 6, time: 1000 }, function () {
                                window.location.href = "/Home/Index";
                            });
                        } else {
                            layer.msg(res.msg, { icon: 5, time:2000 });
                        }
                    }
                })

                // …
                return false; // 阻止默认 form 跳转
            });
        });
    </script>
