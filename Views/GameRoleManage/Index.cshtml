
@{
    ViewBag.Title = "Index";
}


<style>
    .addHide {
        display: none;
    }
    form{
        margin-top:20px;
    }
</style>


<div>
    <fieldset class="layui-elem-field">
        <legend>
            <span class="layui-breadcrumb">
                <a href="/Home/Index" target="_top">游戏管理</a>
                <a><cite>游戏角色管理</cite></a>
            </span>
        </legend>
        <div class="layui-field-box">
            <div class="layui-form-item" style=" margin-top: 10px">
                <div class="layui-inline">
                    <label class="layui-form-label">英雄名称</label>
                    <div class="layui-input-block">
                        <input type="text" id="name" name="name" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">英雄类型</label>
                    <div class="layui-input-block">
                        <input type="text" id="type" name="type" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <button type="button" onclick="Search()" class="layui-btn layui-btn-radius"><i class="layui-icon layui-icon-refresh-1"></i> 查询</button>
                    <button type="button" onclick="Add()" class="layui-btn layui-btn-warm"><i class="layui-icon layui-icon-add-1"></i> 添加</button>
                </div>
            </div>
        </div>
    </fieldset>
</div>



@*添加和修改页面*@

<div class="addHide">
    <form class="layui-form layui-form-pane" lay-filter="demo-val-filter">
        <input type="hidden" name="ID"  />
        <div class="layui-form-item">
            <label class="layui-form-label">英雄名称</label>
            <div class="layui-input-block">
                <input type="text" id="RoleName" name="RoleName" autocomplete="off" placeholder="请输入英雄名称" lay-verify="required" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">游戏ID</label>
            <div class="layui-input-block">
                <input type="text" id="GameID" name="GameID" autocomplete="off" placeholder="请输入游戏ID" lay-verify="required" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">台词</label>
            <div class="layui-input-block">
                <input type="text" id="Lines" name="Lines" autocomplete="off" placeholder="请输入台词" lay-verify="required" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">类型</label>
            <div class="layui-input-block">
                <input type="text" id="RoleType" name="RoleType" autocomplete="off" placeholder="请输入类型" lay-verify="required" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">性别</label>
                <div class="layui-input-block">
                    <input type="radio" id="Sex" name="Sex" value="男" title="男">
                    <input type="radio" id="Sex" name="Sex" value="女" title="女">
                </div>
            </div>
        </div>
       
        <div class="layui-form-item" style="text-align:center">
            <button class="layui-btn" lay-submit lay-filter="demo2">确认</button>
            <button type="reset" class="layui-btn layui-btn-primary">重置</button>
        </div>
    </form>
</div>






<table class="layui-hide" id="test"></table>

<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>

<script>
    var table;
    var form;
    layui.use(['table', 'util', 'form'], function () {
         table = layui.table;
        var util = layui.util;
        form = layui.form;



        table.render({
            elem: '#test'
            , id: 'test'
            , url: '/GameRoleManage/GetList'
            , title: '游戏角色表'
            , cols: [[
                { field: 'GameID', title: '游戏ID' }
                , { field: 'RoleName', title: '英雄名称' }
                , { field: 'Lines', title: '台词' }
                , { field: 'RoleType', title: '英雄类型' }
                , { field: 'Sex', title: '性别' }
                , {
                    field: 'ShelfTime',
                    title: '上线时间',
                    templet: function (d) {
                        if (!d.ShelfTime) return "";
                        var ts = parseInt(d.ShelfTime.replace(/\/Date\((\d+)\)\//, "$1"));
                        return util.toDateString(ts, 'yyyy-MM-dd HH:mm:ss');
                    } }
                , { field: 'Remark', title: '备注' }
                , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 150 }
            ]]
            , page: true
        });

        // 监听行工具事件
        table.on('tool(test)', function (obj) {
            var data = obj.data; // 当前行数据
            if (obj.event === 'edit') {
                // 编辑
                layer.open({
                    type: 1, // page 层类型
                    area: ['500px', '480px'],
                    title: '修改英雄',
                    shade: 0.6, // 遮罩透明度
                    shadeClose: false, // 点击遮罩区域，关闭弹层
                    maxmin: true, // 允许全屏最小化
                    anim: 0, // 0-6 的动画形式，-1 不开启
                    content: $(".addHide"),
                    cancel: function (index, layero, that) {
                        $(".addHide").hide();
                    }
                });

                // 表单赋值
                form.val('demo-val-filter', {
                    "ID": data.ID,            // 隐藏主键置空（新增不用传）
                    "RoleName": data.RoleName,      // 英雄名称
                    "GameID": data.GameID,        // 游戏ID
                    "Lines": data.Lines,         // 台词
                    "RoleType": data.RoleType,      // 类型
                    "Sex": data.Sex=="男"?"男":"女",       // 默认男
                    "Remark": data.Remark         // 备注
                });





            } else if (obj.event === 'del') {
                layer.confirm('确定删除该角色吗？', function (index) {

                    $.ajax({
                        url: "/GameRoleManage/Delete",
                        type: "post",
                        data: { ID: data.ID },
                        success: function (res) {
                            if (res.code == 0) {
                                layer.msg(res.msg, { icon: 6, time: 1200 });
                                //关闭弹层
                                layer.closeAll(); // 关闭所有类型的层
                                //重载
                                Search();

                            } else {
                                layer.msg(res.msg, { icon: 5, time: 2000 });
                            }
                        }
                    });
                    layer.close(index);
                });
            }
        });




        // 提交事件（添加功能）
        form.on('submit(demo2)', function (data) {
            var field = data.field; // 获取表单字段值
            // 此处可执行 Ajax 等操作

            $.ajax({
                url: "/GameRoleManage/Save",
                type: "post",
                data: field,
                success: function (res) {
                    if (res.code == 0) {
                        layer.msg(res.msg, { icon: 6, time: 1000 }, function () {
                            //关闭弹层
                            layer.closeAll(); // 关闭所有类型的层
                            //重载
                            Search();

                            $(".addHide").hide();
                        });
                    } else {
                        layer.msg(res.msg, { icon: 5, time: 2000 });
                    }
                }
            });

            // …
            return false; // 阻止默认 form 跳转
        });


    });




    //查询
    function Search() {
        table.reload('test', {
            where: { // 传递数据异步请求时携带的字段
                name: $("#name").val(),
                type: $("#type").val()
            },
            page: { curr: 1 } // ⭐ 查询后回到第一页
        });
    }


    //添加
    function Add() {
        //赋值
        form.val('demo-val-filter', {
            "ID": "",            // 隐藏主键置空（新增不用传）
            "RoleName": "",      // 英雄名称
            "GameID": "",        // 游戏ID
            "Lines": "",         // 台词
            "RoleType": "",      // 类型
            "Sex": "男",       // 默认男（bit → true/false）
            "Remark": ""         // 备注
        });

        // 在此处输入 layer 的任意代码
        layer.open({
            type: 1, // page 层类型
            area: ['500px', '480px'],
            title: '新增英雄',
            shade: 0.6, // 遮罩透明度
            shadeClose: false, // 点击遮罩区域，关闭弹层
            maxmin: true, // 允许全屏最小化
            anim: 0, // 0-6 的动画形式，-1 不开启
            content: $(".addHide"),
            cancel: function (index, layero, that) {
                $(".addHide").hide();
            }
        });
    }


</script>
